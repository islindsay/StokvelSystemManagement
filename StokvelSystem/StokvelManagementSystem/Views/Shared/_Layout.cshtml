<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stokvel Management System</title>

    <!-- Core Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StokvelManagementSystem.styles.css" asp-append-version="true" />
    
    <!-- Icon Libraries -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Page-specific styles -->
    @RenderSection("Styles", required: false)
</head>

<body class="d-flex flex-column min-vh-100">
     <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <!-- Left: Brand / Title -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    STOKVEL MANAGEMENT SYSTEM
                </a>

                @using System.IdentityModel.Tokens.Jwt
                @using System.Security.Claims
                @inject IHttpContextAccessor HttpContextAccessor

                <!-- Right: Logged-in username from JWT, clickable to Profile -->
                @{
                    string username = "Guest"; // default
                    var jwtCookie = HttpContextAccessor.HttpContext.Request.Cookies["jwt"];

                    if (!string.IsNullOrEmpty(jwtCookie))
                    {
                        var handler = new JwtSecurityTokenHandler();
                        var token = handler.ReadJwtToken(jwtCookie); // decode without validating
                        var uniqueNameClaim = token.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name || c.Type == "unique_name");
                        if (uniqueNameClaim != null)
                        {
                            username = uniqueNameClaim.Value;
                        }
                    }
                }

                <a asp-controller="Profile" asp-action="Index" class="navbar-text fw-bold text-decoration-none">
                    <i class="bi bi-person-circle"></i> @username
                </a>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-auto py-3 bg-light text-center text-muted border-top">
        <div class="container">
            &copy; @DateTime.Now.Year - Stokvel Management System
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

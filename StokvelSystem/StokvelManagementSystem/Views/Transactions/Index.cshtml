@model IEnumerable<StokvelManagementSystem.Models.Transaction>
@{
    ViewData["Title"] = "Transactions";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>GroupName</th>
                        <th>FirstName</th>
                        <th>Contribution</th>
                        <th>Penalty</th>
                        <th>Total</th>
                        <th>Date</th>
                        <th>Reference</th>
                        <th>Proof</th>
                        <th>CreatedBy</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.GroupName</td>
                            <td>@item.FirstName</td>
                            <td>$ @item.ContributionAmount.ToString("N2")</td>
                            <td>$ @item.PenaltyAmount.ToString("N2")</td>
                            <td>$ @item.TotalAmount.ToString("N2")</td>
                            <td>@item.TransactionDate.ToString("dd MMM yyyy")</td>
                            <td>@item.Reference</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ProofOfPaymentPath))
                                {
                                    <a href="@item.ProofOfPaymentPath" target="_blank" class="btn btn-sm btn-info">View</a>
                                }
                            </td>
                            <td>@item.CreatedBy</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
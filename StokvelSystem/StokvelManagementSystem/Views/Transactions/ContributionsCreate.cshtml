@model StokvelManagementSystem.Models.Transaction
@{
    ViewData["Title"] = "Record Transaction";
}


<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@ViewData["Title"]</h4>
            <div><strong>Date:</strong> @DateTime.Now.ToString("dd MMMM yyyy")</div>
        </div>

        <div class="card-body">
            <form asp-action="ContributionsCreate" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- File Upload First -->
                <div class="form-group">
                    <label for="ProofOfPayment" class="form-label">Proof of Payment</label>
                    <input type="file" name="ProofOfPayment" class="form-control" accept=".pdf,.jpg,.png" required>
                    <small class="text-muted">Upload receipt or proof (PDF, JPG, PNG)</small>
                </div>

                <!-- Personal + Group Info -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">First Name</label>
                            <input type="text" class="form-control" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Group Name</label>
                            <input type="text" class="form-control" value="@Model.GroupName" readonly>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PaymentMethodID" class="form-label">Payment Method</label>
                            <select asp-for="PaymentMethodID" class="form-select" required
                                    asp-items="@(new SelectList(Model.PaymentMethods, "Id", "Method"))">
                                <option value="">-- Select Payment Method --</option>
                            </select>
                            <span asp-validation-for="PaymentMethodID" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Reference" class="form-label">Reference</label>
                            <input asp-for="Reference" class="form-control" placeholder="e.g., July Contribution" required>
                            <span asp-validation-for="Reference" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Contribution Section: Amount > Penalty > Total -->
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="ContributionAmount" class="form-label">Contribution Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="ContributionAmount" class="form-control" type="number" step="0.01" required id="ContributionAmount">
                            </div>
                            <span asp-validation-for="ContributionAmount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="PenaltyAmount" class="form-label">Penalty Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="PenaltyAmount" class="form-control" type="number" step="0.01" id="PenaltyAmount">
                            </div>
                            <span asp-validation-for="PenaltyAmount" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="TotalAmount" class="form-label">Total Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="TotalAmount" class="form-control" type="number" step="0.01" readonly id="TotalAmount">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-label">Supposed Contribution</label>
                            <input type="number" class="form-control" id="SupposedContribution" readonly value="100.00">
                        </div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="ContributionsIndex" class="btn btn-outline-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Submit Transaction</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/transactions.css" />
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(document).ready(function () {
            function calculateTotal() {
                var contribution = parseFloat($('#ContributionAmount').val()) || 0;
                var penalty = parseFloat($('#PenaltyAmount').val()) || 0;
                $('#TotalAmount').val((contribution + penalty).toFixed(2));
            }

            $('#ContributionAmount, #PenaltyAmount').on('input', calculateTotal);

            // Static value (could be dynamically fetched based on group/user)
            $('#SupposedContribution').val('100.00');
        });
    </script>
}

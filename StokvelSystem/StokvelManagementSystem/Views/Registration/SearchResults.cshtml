@model List<StokvelManagementSystem.Models.Member>

<h2 class="mb-4">
    <i class="bi bi-people-fill text-primary"></i> Search Results
</h2>

@if (Model.Any())
{
    <div class="table-responsive border rounded shadow-sm" style="max-height: 600px; overflow-y: auto;">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-dark position-sticky top-0" style="z-index: 1;">
                <tr>
                    <th scope="col">FirstName</th>
                    <th scope="col">MiddleName</th>
                    <th scope="col">LastName</th>
                    <th scope="col">NationalID</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Email</th>
                    <th scope="col">Gender</th>
                    <th scope="col">RegistrationDate</th>
                    <th scope="col">Address</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model)
                {
                    <tr>
                        <td>@member.FirstName</td>
                        <td>@member.MiddleName</td>
                        <td>@member.LastName</td>
                        <td>@member.NationalID</td>
                        <td>@member.Phone</td>
                        <td>@member.Email</td>
                        <td>@member.GenderText</td>
                        <td>@member.RegistrationDate.ToShortDateString()</td>
                        <td>@member.Address</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No members found matching your search.</p>
}
